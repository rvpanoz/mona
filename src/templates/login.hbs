<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-2">
            <h1 class="text-center login-title">{{title}}</h1>
            <div class="account-wall">
                <form class="form-signin">
                    <div class="form-group form-group-email">
                        <input type="text" class="form-control" id="input-email" placeholder="Email" required autofocus autocomplete="off">
                    </div>
                    <div class="form-group form-group-password">
                        <input type="password" class="form-control" id="input-password" placeholder="Password" required autocomplete="off">
                    </div>
                    <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Sign in</button>
                </form>
            </div>
            <div class="text-center">
                <a href="#" class="text-center new-account">Create an account </a>
            </div>
        </div>
    </div>
</div>
